{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../cert/**",
        "outDir": "dist/semai/cert",
        "watchAssets": true
      }
    ],
    "plugins": ["@nestjs/swagger"]
  }
}
